{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "target": "ES2021",

    "strict": true,
    "module": "Node16",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "types",

    "types": [
      "vite/client",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "./types",
      "./node_modules"
    ],
    "jsx": "react-jsx",
    "noEmit": false,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "vite.config.mts"
  ]
}
