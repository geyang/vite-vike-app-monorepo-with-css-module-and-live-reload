{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "target": "ES2021",

    "strict": true,
    "module": "Node16",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "outDir": "./dist",
    "declarationDir": "types",

    "types": [
      "vite/client",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "./types",
      "./node_modules"
    ],
    //    "baseUrl": "./",
    //    "paths": {
    //      "@vuer-ai/vuer": [
    //        "../vuer-ts/src/index.tsx"
    //      ]
    //    },
    "jsx": "react-jsx",
    "allowJS": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "./pages/**/*",
    "./renderer/**/*"
  ],
  "exclude": [
    "node_modules",
    "vite.config.ts"
  ]
}
